<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link rel="stylesheet" href="style.css">
        <title>Lista de Afazeres</title>
    </head>
    <body>
        <header>
            <% if (task == null) { %>
            <form action="/create" method="post">
                <input type="text" name="task" id="task" placeholder="Insira uma tarefa"/>
                <button type="submit" id="addButton">Adicionar</button>
            </form>
            <% } else { %>
            <form action="/update/<%= task._id %>" method="post">
                <input type="text" name="task" id="task" value="<%= task.task %>"/>
                <button type="submit" id="addButton">Atualizar</button>
            </form>
            <% } %>
        </header>
        <section class="tasks">
            <ul>
                <% tasksList.forEach((task) => { %>
                    <li><%= task.task %> | <%= task.date.toLocaleDateString('pt-BR') %></li>
                    <a href="/getById/<%= task._id %>/update">Editar</a>
                    <a href="/getById/<%= task._id %>/delete">Apagar</a>
                <% }); %>
            </ul>
        </section>

        <% if (taskDelete != null) { %>
        <section class="modal">
            <div class="card">
                <a href="/">X</a>
                <h2>Confirmação</h2>
                <hr>
                <p>Apagar a tarefas: <%= taskDelete.task %>?</p> 
                <a href="/">Não</a>
                <a href="/delete/<%= taskDelete._id %>">Sim</a>
            </div>
        </section>
        <% } %>
        
        <script src="script.js"></script>
    </body>
</html>